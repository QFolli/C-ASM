lab 15


use16
org 0x7c00
CODE_SEG equ gdt_code - gdt_start
DATA_SEG equ gdt_data - gdt_start

boot:
    mov ax, 0x2401
    int 0x15
    mov ax, 0x3
    int 0x10
    cli
    lgdt [gdt_pointer]
    mov eax, cr0
    or eax, 0x1
    mov cr0, eax
    jmp dword CODE_SEG:boot2

gdt_start:
    gdt_null:
        dq 0x0
    gdt_code:
        dw 0xFFFF
        dw 0x0
        db 0x0
        db 10011010b
        db 11001111b
        db 0x0
    gdt_data:
        dw 0xFFFF
        dw 0x0
        db 0x0
        db 10010010b
        db 11001111b
        db 0x0
gdt_end:
gdt_pointer:
    dw gdt_end - gdt_start
    dd gdt_start

use32
boot2:
    mov ax, DATA_SEG
    mov ds, ax
    mov es, ax
    mov fs, ax
    mov gs, ax
    mov ss, ax

    call printName
    call printFaculty
    call printGroup

    cli
    hlt

printName:
    mov esi, name
    mov ebx, 0xb8000
    call printString
    ret

printFaculty:
    mov esi, faculty
    mov ebx, 0xb8000 + 160 ; Ñëåäóþùàÿ ñòðîêà
    call printString
    ret

printGroup:
    mov esi, group
    mov ebx, 0xb8000 + 320 ; Åùå ñëåäóþùàÿ ñòðîêà
    call printString
    ret

printString:
    .loop:
        lodsb
        or al, al
        jz .done
        or eax, 0x0100
        mov word [ebx], ax
        add ebx, 2
        jmp .loop
    .done:
    ret

name: db "Moiseenko Vitalii Olegovich", 0
faculty: db "FMF", 0
group: db "403", 0

times 510 - ($-$$) db 0
dw 0xaa55
